<!DOCTYPE html>
<html>

<!-- Header  -->

<head>
    <style></style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='styles/indexpage.css') }}">
    <title>Other Albums</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <img class="card-img-top" src="{{url_for('static', filename='images/gingkologo.png')}}" alt="Card image cap" ,
            style="width:62px;height:51px;">
        <a class="navbar-brand" href="#">Tree-search</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{url_for('albums', message=user_email) }}"
                        style="font-weight:bold;">Albums </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{url_for('createalbum', message=user_email) }}">Create Album</a>
                </li>


            </ul>
        </div>
        <form class="form-inline" style="display:flex">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Users" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>
    <br>


    <!-- album card intro-->
    <section class="bg-light pt-5 pb-5 shadow-sm">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div id="trial">
                        <div>

                            <h2 class="text-lowercase">{{other_email}}</h2>

                        </div>
                        <div>
                            <a href="/createalbum?message={{user_email}}"
                                class="btn btn-primary mt-auto align-self-start"
                                style="background-color:black;border-color:none;" id="new_album">Create New
                                Album</a>
                        </div>
                    </div>
                    <h4 class="border-bottom mb-4">{{other_email}}'s Albums</h4>
                </div>
            </div>


            <!-- start album cards-->
            <div class="row">
                {% for adata in albumdata %}
                <div class="col-lg-4 mb-3 d-flex align-items-stretch">
                    <div class="card supercard">
                        <img src="https://storage.googleapis.com/treephotos/rcrowland15/{{adata[0]}}"
                            class="card-img-top" alt="Card Image" style="height:275px;object-fit:cover;
                            object-position: 50% 50%;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{adata[1]}}</h5>
                            <p class="card-text mb-4">{{adata[2]}}</p>
                            <a href="/entrytemplate/{{adata[3]}}" class="stretched-link">Go to journal entries</a>
                            <a href="/deletealbum/{{adata[3]}}" class="btn btn-primary mt-auto align-self-start"
                                id="delete_button">Delete</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

        </div>
    </section>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
        integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
        crossorigin="anonymous"></script>
    <script src="{{url_for('static', filename='js/script.js' )}}"></script>
</body>

</html>